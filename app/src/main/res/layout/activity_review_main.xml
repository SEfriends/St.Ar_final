<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e74c3c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:gravity="bottom|center_horizontal">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="left|center_vertical"
                android:background="@layout/layout"
                android:id="@+id/writeReviewBtn"
                android:onClick="onReviewWriteButtonClicked"
                >

                <ImageView
                    android:gravity="center_vertical"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:paddingLeft="17dp"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/write_review_icon"
                    android:layout_weight="0.3"
                    />

                <TextView
                    android:text="리뷰 작성하기"
                    android:fontFamily="NanumGothic"
                    android:textSize="11pt"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:id="@+id/textView"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center_horizontal"
            android:layout_weight="0.6"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="left|center_vertical"
                android:background="@layout/layout"
                android:id="@+id/readReviewBtn"
                android:onClick="onReviewReadButtonClicked">

                <ImageView
                    android:gravity="center_vertical"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:paddingLeft="14dp"
                    app:srcCompat="@drawable/read_review_icon"
                    android:id="@+id/imageView3"
                    android:layout_weight="0.3"/>

                <TextView
                    android:text="리뷰 보기"
                    android:fontFamily="NanumGothic"
                    android:textSize="11pt"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:gravity="center">

        <ImageButton
            android:id="@+id/review_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/icon_home"
            android:layout_gravity="bottom"
            android:onClick="onHomeButtonClicked" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:paddingLeft="-40dp"
            app:srcCompat="@drawable/logo2" />

    </LinearLayout>
</LinearLayout>