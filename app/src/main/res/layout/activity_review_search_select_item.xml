<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_search_select_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3FFFFFF"
    android:onClick="onSearchItemClicked"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_search_select_item_placename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="할리스커피 분당서현점"
                android:textColor="#A5000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_search_select_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="카페"
                android:textColor="#80000000"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/review_search_select_item_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="031-701-7863"
            android:textColor="#A5009017"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/review_search_select_item_locationcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="경기 성남시 분당구 새마을로1번길 2 (서현동 77-1)"
            android:textColor="#80000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>