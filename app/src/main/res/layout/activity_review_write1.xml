<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_review_write1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#e74c3c"
            android:weightSum="10">

            <ImageView
                android:gravity="left|center_vertical"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/write_review_icon_white"
                android:id="@+id/imageView" />

            <TextView
                android:text="리뷰 작성하기"
                android:fontFamily="NanumGothic"
                android:layout_gravity="center_vertical"
                android:textSize="12pt"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginLeft="6dp"
                android:layout_weight="9" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:paddingLeft="70dp"
            android:gravity="bottom"
            android:weightSum="10">

            <TextView
                android:text="- 방문장소 목록 -"
                android:fontFamily="nanumgothic"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:gravity="right|bottom"
                android:layout_weight="1" />

            <TextView
                android:text="리뷰를 작성할 장소를 선택해주세요"
                android:fontFamily="nanumgothic"
                android:textSize="8pt"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_marginLeft="7dp"
                android:layout_weight="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="방문 날짜"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:background="@layout/activity_review_write1_list_border"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:text="방문 장소"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@layout/activity_review_write1_list_border"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="리뷰"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@layout/activity_review_write1_list_border"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ListView
                android:id="@+id/write_review_location_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>